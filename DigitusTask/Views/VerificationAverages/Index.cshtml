@using DigitusTask.Models
@model List<DigitusTask.Models.UserListViewModal>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Average</h1>

@using (Html.BeginForm("Index","VerificationAverages",FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group form-group-sm">
            <div class="col-md-6">
                @Html.TextBox("start", null, new { @type = "date" })
            </div>
        </div>        
        <div class="form-group-sm">            
                <input type="submit" value="Select Date" class="btn btn-sm btn-primary" /> <span> </span>            
        </div>
    </div>
}
    <h5>Average Time</h5>
    <div class="form-group">
        <label class="form-control">@ViewBag.average</label>
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Verification Time</th>
            <th>Verification Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserVerificationTime</td>
                <td>@user.VerificationDate</td>

            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker();
            $("#anim").on("change", function () {
                $(".datepicker").datepicker("option", "showAnim", $(this).val());
            });
        });
    </script>
}