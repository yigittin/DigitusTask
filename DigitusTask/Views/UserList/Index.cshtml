@using DigitusTask.Models
@model List<DigitusTask.Models.UserListViewModal>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User List</h1>
<h5>Verified Account Counts</h5>
<div class="form-group col-md-2">
    <label class="form-control">@ViewBag.Count</label>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Register Date</th>
            <th>Verification Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>@user.RegisterDate</td>
            <td>@user.VerificationDate</td>

        </tr>
        }
    </tbody>
</table>
